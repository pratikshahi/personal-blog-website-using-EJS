<%- include("partials/header") %>
    <h1>Compose</h1>

    <form action="/" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="composedTitle">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" rows="3" name="composedPost"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

    <%- include("partials/footer") %>